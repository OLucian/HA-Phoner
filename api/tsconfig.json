{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "ES2017",
    "module": "commonjs",
    "strict": false,
    "pretty": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es5", "es6"],
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules/**", "dist/**"]
}
